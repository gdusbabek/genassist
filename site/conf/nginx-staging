upstream app_genassist_staging {
    server 127.0.0.1:2001;
}

server {
    listen 0.0.0.0:81;
    server_name genassist.tagfriendly.com genassist-staging;
    access_log /var/log/nginx/genassist-staging.log;

    location / {
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_set_header X-NginX-Proxy true;

        proxy_pass http://app_genassist_staging/;
        proxy_redirect off;
    }
}