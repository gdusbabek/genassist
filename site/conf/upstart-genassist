#!upstart

description "genassist node.js process"
author "gdusbabek"

start on startup
stop on shutdown

script
    export HOME="/root"

    echo $$ > /var/run/genassist.pid
    exec sudo -u gdusbabek /usr/local/bin/hode /home/gdusbabek/site/server.js >> var/log/genassist.log 2>&1
end script

pre-start script
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Starting" >> /var/log/genassist.log
end script

pre-stop script
    rm /var/run/genassist.pid
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Stopping" >> /var/log/genassist.log
end script