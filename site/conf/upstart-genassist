#!upstart

description "genassist node.js process"
author "gdusbabek"

start on startup
stop on shutdown
respawn
respawn limit 20 5

limit nofile 32768 32768

script
    export HOME="/var/www"

    echo $$ > /var/run/genassist.pid
    cd /home/node/site
    exec sudo -u node /usr/bin/node server.js >> var/log/genassist-node.log 2>&1
end script

pre-start script
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Starting" >> /var/log/genassist-node.log
end script

pre-stop script
    rm /var/run/genassist.pid
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Stopping" >> /var/log/genassist-node.log
end script