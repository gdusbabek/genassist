#!/usr/bin/node

var async = require('async');

var database = require('../database');
var settings = require('../config').settings;

var db = database.newDbFromPath(settings.DB_PATH);

async.parallel([
    db.getVersion.bind(db),
    db.getUserCount.bind(db)
], 
function(err, results) {
    console.log('Database version: ' + results[0]);
    console.log('Database users  : ' + results[1]);
    console.log('Database location: ' + settings.DB_PATH);
});